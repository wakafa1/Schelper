<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.wakafa.listview">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:name="cn.wakafa.listview.Others.ChatApplication"
        android:icon="@drawable/message"
        android:label="@string/app_name"
        android:roundIcon="@drawable/message"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:screenOrientation="portrait"
        android:persistent="true">
        <activity
            android:name=".Activity.MainActivity"
            android:theme="@style/SplashTheme"
            android:screenOrientation="portrait">
                <intent-filter>
                    <action android:name="android.intent.action.MAIN" />
                    <category android:name="android.intent.category.LAUNCHER" />
                </intent-filter>
        </activity>
        <activity android:name=".WebView" />
        <activity
            android:name=".Activity.WebViewActivity"/>
        <activity
            android:name=".Activity.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait"
            />

        <service
            android:name=".Service.CheckService"
            android:enabled="true"
            android:exported="true"></service>

        <activity
            android:name="cn.wakafa.listview.Activity.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.AppCompat"
            android:windowSoftInputMode="adjustResize|stateVisible"
            android:screenOrientation="portrait"
            >
        </activity>
    </application>

</manifest>